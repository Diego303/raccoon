<script>
    // State
    const cards = document.querySelectorAll('.calendar-card');
    const pointsDisplay = document.getElementById('calendar-points');
    const modal = document.getElementById('gift-modal');
    const cardText = document.getElementById('card-text');
    
    // Dedications 1-10
    const DEDICATIONS = [
        "Te quiero mucho ‚ù§Ô∏è",
        "Siempre en mi coraz√≥n 37.884962, -4.783206",
        "Tus ojos y tu sonrisa iluminan mi alma Mapache",
        "Nunca dudes de ti misma ni de tu esfuerzo, sabes que tienes mucho potencial y eres capaz de todo ‚ù§Ô∏è",
        "ÊàëÁà±‰Ω† ‚ù§Ô∏è",
        "Me tienes para lo que necesites.",
        "Gracias por lo bonita que eres y todo lo bonito que me has dado."
    ];
    
    const STORAGE_KEY = 'raccoon_total_score'; 
    const UNLOCKS_KEY = 'raccoon_unlocks';
    
    let unlocks = [];
    try {
        unlocks = JSON.parse(localStorage.getItem(UNLOCKS_KEY) || '[]');
    } catch(e) {}
    
    let currentDayOpening = null;

    function updateDisplay(score) {
        if(pointsDisplay) pointsDisplay.textContent = score;
        
        cards.forEach(card => {
            const day = parseInt(card.dataset.day);
            if(unlocks.includes(day)) {
                card.classList.add('unlocked');
                const overlay = card.querySelector('.lock-overlay');
                if(overlay) overlay.style.display = 'none'; 
            }
        });
    }

    // Modal Logic
    function openCard(day) {
        currentDayOpening = day;
        if(modal) modal.classList.add('active');
        
        // Load Text from List (1-indexed day maps to 0-indexed array)
        if(cardText) {
            const text = DEDICATIONS[day - 1] || "¬°Feliz Navidad!";
            cardText.textContent = text;
        }
    }
    
    function closeCard() {
        if (!modal.classList.contains('active')) return;
        modal.classList.remove('active');
        currentDayOpening = null;
    }
    
    // Interactions
    cards.forEach(card => {
        card.addEventListener('click', () => {
            const day = parseInt(card.dataset.day);
            const cost = parseInt(card.dataset.cost);
            
            if (unlocks.includes(day)) {
                // Open Modal
                openCard(day);
                return;
            }

            // Check points from display DOM as source of truth for now? 
            // Or wait for an authoritative source. 
            // Index.astro holds the game.totalScore. 
            // We can read the DOM for current points since it's updated via event.
            const currentPoints = parseInt(pointsDisplay ? pointsDisplay.textContent : '0');

            if (currentPoints >= cost) {
                if(confirm(`Desbloquear Premio ${day} por ${cost} puntos?`)) {
                    // Signal Index to deduct
                    document.dispatchEvent(new CustomEvent('spend-points', { detail: { cost: cost } }));
                    
                    // Optimistic update
                    unlocks.push(day);
                    localStorage.setItem(UNLOCKS_KEY, JSON.stringify(unlocks));
                    
                    card.classList.add('unlocked');
                    const overlay = card.querySelector('.lock-overlay');
                    if(overlay) overlay.style.display = 'none';
                    
                    // Confetti?
                }
            } else {
                card.classList.add('shake');
                setTimeout(() => card.classList.remove('shake'), 500);
            }
        });
    });
    
    // Close Modal Events
    if (modal) {
        modal.addEventListener('click', (e) => {
            if (e.target === modal) {
                closeCard();
            }
        });
    }
    
    // Load state
    updateDisplay(parseInt(localStorage.getItem(STORAGE_KEY) || '0'));
    
    // Listen for score updates from GameEngine
    document.addEventListener('score-updated', (e) => {
        const newScore = e.detail.totalScore;
        updateDisplay(newScore);
    });
</script>
