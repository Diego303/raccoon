    <div class="gift-card-modal" id="gift-card-content">
        <!-- Title Removed per request -->
        <!-- <h3 id="card-title" class="card-title">DAY 1</h3> -->
        <div id="card-text" class="card-text-display">...</div>
        <div class="close-hint">Haz click fuera para cerrar</div>
    </div>
